{% extends "admin/layout.twig" %}


{% block content %}

   
<!-- Page header -->
<div class="page-header page-header-default ">
<div class="page-header-content">

<div class="page-title">
<h1> <span class="text-semibold"><i class="icon-arrow-right6 position-left goback"></i>
الإعدادات
</span></h1>
</div>

<div class="heading-elements">



</div>
</div>
</div>
<!-- /page header -->
 
     
     
     
                   <style>
.manager-wrapper {
    overflow: hidden;
    padding-left: 30px;
}</style>

		
		
		
		
		
<div class="manager-wrapper">
    
         
     
<div class="col-md-12">
<div class="panel panel-flat">

<div class="panel-heading no-padding-bottom">
<h3 class="panel-title">الإعدادات</h3>
<p class="no-margin-bottom"></p>
</div>
<div class="panel-body">
<form class="form-horizontal" id="generalSettings" method="post" action="{{path_for('settings.profile')}}" enctype="multipart/form-data">
                    <legend class="text-bold"></legend>
                    
                    <div class="form-group">
                        <label class="control-label col-lg-3">البريد الإلكتروني </label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="email" placeholder="أدخل بريدك الإلكتروني"  value="{{email}}">
                        </div>
                    </div>     
                    
                    <div class="form-group">
                        <label class="control-label col-lg-3"> كلمة المرور </label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="password"  />
                        </div>
                    </div>
                    
                    
                </fieldset>
                <div class="text-right">
                    <button type="submit" class="btn btn-block btn-primary">حفظ التغييرات</button>
                </div>
                <br>
                <div id="result"></div>
            </form>
</div>
</div>
</div>
         
         
		
		
     
     
<div class="col-md-12">
<div class="panel panel-flat">

<div class="panel-heading no-padding-bottom">
<h3 class="panel-title">  روابط السوشيال ميديا    </h3>
<p class="no-margin-bottom"></p>
</div>
<div class="panel-body">
<form class="form-horizontal" id="generalSettings" method="post" action="{{path_for('settings.update')}}" enctype="multipart/form-data">
                    <legend class="text-bold"></legend>
                    
                    
                <div class="form-group">
                  <label class="control-label col-lg-3"> رابط الفيسبوك </label>
                  <div class="col-lg-9">
                    <input type="text" class="form-control" name="fb_link" placeholder="رابط الفيسبوك" value='{{options.fb_link}}'/>
                  </div>
                </div>     
                
                <div class="form-group">
                  <label class="control-label col-lg-3"> رابط تويتر </label>
                  <div class="col-lg-9">
                    <input type="text" class="form-control" name="twitter_link" placeholder="رابط تويتر" value='{{options.twitter_link}}'/>
                  </div>
                </div>     
                
                <div class="form-group">
                  <label class="control-label col-lg-3"> رابط اليوتوب </label>
                  <div class="col-lg-9">
                    <input type="text" class="form-control" name="youtube_link" placeholder="رابط اليوتوب" value='{{options.youtube_link}}'/>
                  </div>
                </div>     
                
                <div class="form-group">
                  <label class="control-label col-lg-3"> رابط الإنستغرام </label>
                  <div class="col-lg-9">
                    <input type="text" class="form-control" name="instagram_link" placeholder="رابط الإنستغرام" value='{{options.instagram_link}}'/>
                  </div>
                </div>   
                </fieldset>
                <div class="text-right">
                    <button type="submit" class="btn btn-block btn-primary">حفظ الروابط</button>
                </div>
                <br>
                <div id="result"></div>
            </form>
</div>
</div>
</div>
		
		
		
		
		
		

		
     
     
<div class="col-md-12">
<div class="panel panel-flat">

<div class="panel-heading no-padding-bottom">
<h3 class="panel-title">  أيقونة الإتصال اسفل الموقع  </h3>
<p class="no-margin-bottom"></p>
</div>
<div class="panel-body">






<form class="form-horizontal"  method="post" action="{{path_for('settings.update')}}" enctype="multipart/form-data">

    <input type="hidden" name="contact_form" value="true">
                    <legend class="text-bold"></legend>

                 
                    <div class="form-group">
                    <label class="control-label col-lg-2"> تفعيل الأيقونة  </label>
                    <div class="col-lg-10">
                        <input type="checkbox" class="form-control" name="contact_icon" {% if options.contact_icon == 'on' %}checked="checked" {% endif %} >
                    </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-lg-3">  رقم الواتساب      </label>
                        <div class="col-lg-9">
                        <input type="text" class="form-control" name="whatsapp_number" placeholder="رقم الواتساب يمكنك اضافة +212 في أول الرقم"  value="{{options.whatsapp_number}}">
                        </div>
                    </div>   
                
                                
                    <div class="form-group">
                      <label class="control-label col-lg-3"> رقم الهاتف </label>
                      <div class="col-lg-9">
                        <input type="text" class="form-control" name="phone_number" placeholder=" رقم الهاتف" value='{{options.phone_number}}'/>
                      </div>
                    </div>     
                    
                    <div class="form-group">
                      <label class="control-label col-lg-3">  رابط المسنجر  </label>
                      <div class="col-lg-9">
                        <input type="text" class="form-control" name="messenger_link" placeholder="  رابط المسنجر" value='{{options.messenger_link}}'/>
                      </div>
                    </div>       

                    <div class="text-right">
                        <button type="submit" class="btn btn-block btn-primary">حفظ الروابط</button>
                    </div>
            </form>
</div>
</div>
</div>
		
		
		
		
		
 
<div class="col-md-12">
<div class="panel panel-flat">

<div class="panel-heading no-padding-bottom">
<h3 class="panel-title">  الفيديو في الصفحة الرئيسية </h3>
<p class="no-margin-bottom"></p>
</div>
<div class="panel-body">









<form class="form-horizontal"  method="post" action="{{path_for('settings.update')}}" enctype="multipart/form-data">

    <input type="hidden" name="video_form" value="true">
                    <legend class="text-bold"></legend>

                 
                    <div class="form-group">
                    <label class="control-label col-lg-2"> تفعيل الفيديو </label>
                    <div class="col-lg-10">
                        <input type="checkbox" class="form-control" name="show_home_video" {% if options.show_home_video == 'on' %}checked="checked" {% endif %} >
                    </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-lg-3">  العنوان الأول    </label>
                        <div class="col-lg-9">
                        <input type="text" class="form-control" name="home_video_h1" placeholder=""  value="{{options.home_video_h1}}">
                        </div>
                    </div>   
                
                                
                    <div class="form-group">
                      <label class="control-label col-lg-3">   العنوان الثاني      </label>
                      <div class="col-lg-9">
                        <input type="text" class="form-control" name="home_video_h3" placeholder="" value='{{options.home_video_h3}}'/>
                      </div>
                    </div>     
                    
                    <div class="form-group">
                      <label class="control-label col-lg-3">  رابط ا الفيديو ، يقبل يوتوب و فيميو فقط  </label>
                      <div class="col-lg-9">
                        <input type="text" class="form-control" name="home_video_link" placeholder="" value='{{options.home_video_link}}'/>
                      </div>
                    </div>       

                    <div class="text-right">
                        <button type="submit" class="btn btn-block btn-primary">حفظ التغييرات</button>
                    </div>
            </form>
</div>
</div>
</div>
        
        
        
        
        
        
    
    
    
        
    
    
    
<div class="col-md-12">
    <div class="panel panel-flat">
       
        
        
        
        <div class="panel-body">
            <form class="form-horizontal" id="generalSettings" method="post" action="{{path_for('settings.update')}}" enctype="multipart/form-data">


    <input type="hidden" name="settings_form" value="true">

                <fieldset class="content-group">
                    <legend class="text-bold"></legend>
                    
                    <div class="form-group">
                        <label class="control-label col-lg-3">شعار الموقع</label>
                        <div class="col-lg-9">
                            <div class="col-lg-3">
                               <label for="logo" class="btn btn-danger btn-rounded"><i class="icon-image2 position-left"></i>
                                اختيار قائمة  </label>
                               <input name="logo" id="logo" accept="image/jpg, image/jpeg, image/png" style="visibility:hidden;" type="file">
                               <div class="logo-settings-preview"> 
                                        <img src="">
                                </div>
                                
                        </div>
                        </div>
                        <div class="col-md-12">
                         <label class="control-label col-lg-3"></label>
                         <div class="setting-preview-img">
                            {% if options.logo is not empty %}
                            <img width='200px' src='/uploads/media/{{ options.logo }}' />
                            {% endif %}
                        </div>
                        </div>
                        
                    </div>
                    
         
         
                    <hr>
                    <div class="form-group">
                        <label class="control-label col-lg-3">اسم الموقع</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control frequired" name="name" placeholder="اسم الموقع" value="{{options.name}}">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-lg-3">سطر  الوصف بالأعلى</label>
                        <div class="col-lg-9">
                         <input type="text" class="form-control" name="tagline" placeholder="سطر الوصف"   value="{{options.tagline}}">
                        </div>
                    </div>  
                        
                 

                    <div class="form-group">
                        <label class="control-label col-lg-3">رقم الهاتف</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="phone"  value="{{options.phone}}" placeholder="أدخل رقم هاتفك  ">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3">البريد الإلكتروني </label>
                        <div class="col-lg-9">
                <input type="text" class="form-control" name="email" placeholder="أدخل بريدك الإلكتروني"  value="{{options.email}}">
                        </div>
                    </div>     
                 
                       <div class="form-group">
                        <label class="control-label col-lg-3">  facebook pixel </label>
                        <div class="col-lg-9">
                        <textarea class='form-control' name="pixel" cols="30" rows="10">{{options.pixel|sgadat|raw}}</textarea>                            
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3"> google analitycs </label>
                        <div class="col-lg-9">
                        <textarea class='form-control' name="stats" cols="30" rows="10">{{options.stats|sgadat|raw}}</textarea>
                        </div>
                    </div>    
                    <div class="form-group">
                        <label class="control-label col-lg-3"> Color </label>
                        <div class="col-lg-9">
                        <input type="color" id="color" name="color" value="{{options.color}}">
                        </div>
                    </div>    

                 
               
             
                  <div class="form-group">
                    <label class="control-label col-lg-2"> تفعيل الصورة السفلية  </label>
                    <div class="col-lg-10">
                        <input type="checkbox" class="form-control" name="footer_img" {% if options.footer_img == 'on' %}checked="checked" {% endif %} >
                    </div>
                    </div>
                    
                    


                                 <div class="form-group">
                        <label class="control-label col-lg-3">  الصورة  السفلية  </label>
                        <div class="col-lg-9">
                            <div class="col-lg-3">
                               <label for="banner_footer" class="btn btn-danger btn-rounded"><i class="icon-image2 position-left"></i>
                                        اختيار الصورة
                                </label>
                               <input name="banner_footer" id="banner_footer" accept="image/jpg, image/jpeg, image/png" style="visibility:hidden;" type="file">
                         
                        </div>
                        </div>
                        <div class="col-md-12">
                         <label class="control-label col-lg-3"></label>
                         <div class="setting-preview-img">
                            {% if options.banner_footer is not empty %}
                            <img width='200px' src='/uploads/media/{{ options.banner_footer }}' />
                            {% endif %}
                        </div>
                        </div>
                        
                    </div>
                    
                 
            
                </fieldset>
                <div class="text-right">
                    <button type="submit" class="btn btn-block btn-primary save-pix">حفظ التغييرات</button>
                </div>
                <br>
                <div id="result"></div>
            </form>
        </div>
    </div>
</div>


</div>


</div>




{% endblock %}